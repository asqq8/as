<view class="login-warp">
<form>
<view class="warp-pos">
 <input placeholder="账号" type="text" class="userId" bindinput="getUserName" value="{{userName}}"/>
  <image src="../../icons/shutdown.png" class="img-pos" hidden="{{flag}}" bindtap="clear"></image>
</view>
<view class="warp-pos">
<input placeholder="密码" class="userPwd" password bindinput="getUserPwd" value="{{userPwd}}"/>
<image src="../../icons/nosee.png" class="img-pos"></image>
</view>

<button class="login-btn" bindtap="login">登录</button>

</form>
<!--快速登录-->
 <view class="fast-login">
   <text>快速登录</text>
 </view>
 <view class="wx-flex">
 <button  open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">授权登录</button>
 <button open-type="getPhoneNumber" bindgetphonenumber="bindGetPhoneNumber">获取手机号</button>
 </view>
</view>


